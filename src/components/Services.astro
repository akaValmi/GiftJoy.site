---
interface Service {
  name: string;
  description: string;
  url_img: string;
}

const serviceList: Service[] = [
  { name: 'Arreglos Personalizados', description: '', url_img: '/regalos_personalizados.webp' },
  { name: 'Sublimación',description:'', url_img: '/sublimacion.jpg' },
  { name: 'Eventos',description:'', url_img: '/eventos.jpg' },
];
---

<div class="container mx-auto p-8">
  <h2 class="flex flex-col items-center text-3xl mb-6 text-yellow-500 font-bold ">Servicios</h2>
  <div class="flex flex-row flex-wrap -mx-2">
    {serviceList.map(service => (
      <div class="w-full sm:w-1/2 md:w-1/3 h-64 md:h-48 mb-4 px-2 relative ">
        <a class="drop-shadow-lg block w-full h-full bg-gray-300 bg-no-repeat bg-center bg-cover relative group overflow-hidden transform transition-transform duration-300 hover:scale-105"
           href="#"
           title={service.name}
           style={{
             backgroundImage: `url('${service.url_img}')`
           }}
        >
          <div class="font-bold text-xl absolute inset-0 flex items-center justify-center text-yellow-100 text-center bg-black bg-opacity-50 opacity-0 group-hover:opacity-100">
            <p>{service.name}</p>
          </div>
          {/* Texto visible en dispositivos móviles */}
          <div class="font-bold text-xl absolute inset-0 flex items-center justify-center text-yellow-100 text-center bg-black bg-opacity-50 opacity-100 sm:opacity-0">
            <p>{service.name}</p>
          </div>
        </a>
      </div>
    ))}
  </div>
</div>

